@model P2P.Models.CreateTransactionViewModel

@{
    ViewData["Title"] = "Tạo giao dịch mới";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-4">
                <h1 class="display-5 fw-bold">Tạo giao dịch mới</h1>
                <p class="lead text-muted">Điền thông tin chi tiết bên dưới để tạo giao dịch ký quỹ an toàn</p>
            </div>

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>Chi tiết giao dịch
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="SenderName" class="form-label"></label>
                                <input asp-for="SenderName" class="form-control" placeholder="Nhập tên đầy đủ của bạn" />
                                <span asp-validation-for="SenderName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SenderEmail" class="form-label"></label>
                                <input asp-for="SenderEmail" class="form-control" placeholder="email@example.com" />
                                <span asp-validation-for="SenderEmail" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RecipientName" class="form-label"></label>
                            <input asp-for="RecipientName" class="form-control" placeholder="Nhập tên người nhận" />
                            <span asp-validation-for="RecipientName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="Amount" class="form-control" type="number" step="1" min="1" placeholder="0" />
                                <span class="input-group-text">VNĐ</span>
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả ngắn gọn về giao dịch"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-credit-card me-2"></i>Tạo & Thanh toán
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-4">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>Lưu ý:</strong> Sau khi tạo giao dịch, bạn sẽ nhận được mã giao dịch duy nhất.
                    Hãy chia sẻ mã này với người nhận để họ có thể nhận tiền.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}