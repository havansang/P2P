@model string
@{
    ViewData["Title"] = "Mã Giao Dịch Bí Mật";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow rounded-4 border-0 p-5">
                <h2 class="mb-4 text-primary">🎯 Giao Dịch Đã Tạo Thành Công!</h2>
                <p class="lead mb-3">Đây là mã <strong>bí mật</strong> bạn cần gửi cho người nhận:</p>

                <div class="input-group mb-4">
                    <input type="text" id="secretKey" class="form-control text-center fs-3 fw-bold border border-2 rounded-start" value="@Model" readonly />
                    <button class="btn btn-outline-primary fs-5 rounded-end" onclick="copyToClipboard()">
                        📋 Sao chép
                    </button>
                </div>

                <p class="text-muted mb-4">* Mã chỉ dùng 1 lần và hết hạn khi giao dịch hết hạn.</p>

                <div class="d-flex justify-content-center gap-3">
                    <a href="/" class="btn btn-outline-secondary px-4 py-2">
                        🏠 Về trang chủ
                    </a>
                    <a href="/Transaction/Create" class="btn btn-outline-success px-4 py-2">
                        ➕ Tạo giao dịch mới
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyToClipboard() {
            var copyText = document.getElementById("secretKey");
            copyText.select();
            copyText.setSelectionRange(0, 99999); // Cho mobile
            document.execCommand("copy");
            alert("✅ Đã sao chép mã: " + copyText.value);
        }
    </script>
}
